
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var genre in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@genre.Name</td>
                           
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


