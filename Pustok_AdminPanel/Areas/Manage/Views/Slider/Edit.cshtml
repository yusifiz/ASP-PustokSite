@model Slider
@{

    ViewData["Title"] = "Edit";
}

<div class="container">

    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title1" class="form-label">Title</label>
                    <input asp-for="Title1" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Title2" class="form-label">SubTitle</label>
                    <input asp-for="Title2" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Order" class="form-label">Order</label>
                    <input asp-for="Order" class="form-control">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BtnText" class="form-label">BtnText</label>
                    <input asp-for="BtnText" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BtnUrl" class="form-label">BtnUrl</label>
                    <input asp-for="BtnUrl" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Text" class="form-label">Text</label>
                    <textarea asp-for="Text" type="text" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="ImageFile" />
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                    <img src="~/uploads/sliders/@Model.Image"/>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


